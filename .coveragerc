[run]
source = .
omit =
    tests/*
    tests_strict/*
    .venv/*
    venv/*
    */site-packages/*
    **/__init__.py
    test_visualization.py
    ./test_visualization.py
    */test_visualization.py
    bmi_visualization.py
    example_nutrition_api.py

[report]
show_missing = True
skip_covered = True
fail_under = 96
exclude_lines =
    pragma: no cover
    if __name__ == "__main__": 
    @overload
    @abstractmethod
    if TYPE_CHECKING:
    except ImportError:
    except Exception:

[html]
directory = htmlcov
